{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Nodemon)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--inspect=9229",
        "${workspaceFolder}/src/server.js"
      ],
      "envFile": "${workspaceFolder}/.env",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
